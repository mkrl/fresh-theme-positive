{{#section "skills"}}
<hr>
<section id="skills">
  {{#> header-skills }}
    {{> header-icon _title="навыки" _section="навыки" _hdricon=(lookup . '_icon') }}
  {{/header-skills}}
  {{#each r.skills.sets}}
    
                <table>
                    <thead>
                        <tr>
                            <th>Навык</th>
                            <th>Ключевые слова</th>
                        </tr>
                    </thead>
                    <tbody>
                      {{#> body-skills }}
                        <tr>
                            <td style="width: 25%;">{{ name }}</td>
                            <td class="keywords">{{#each skills }}{{ this }}{{#unless @last}}  {{/unless}}{{/each}}</td>
                        </tr>
                      {{/body-skills}}
                    </tbody>
                </table>
  {{/each}}
</section>
{{/section}}
